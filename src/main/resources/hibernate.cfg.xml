<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/matriculaDB</property>
        <property name="connection.user">root</property>
        <property name="connection.password"></property>
        <property name="connection.pool_size">5</property>
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="com.devel.models.TypeDocument"/>
        <mapping class="com.devel.models.Document"/>
        <mapping class="com.devel.models.Person"/>
        <mapping class="com.devel.models.Relationship"/>
        <mapping class="com.devel.models.User"/>
        <mapping class="com.devel.models.Phone"/>
        <mapping class="com.devel.models.Ubigeo"/>
        <mapping class="com.devel.models.College"/>
        <mapping class="com.devel.models.Level"/>
        <mapping class="com.devel.models.Section"/>
        <mapping class="com.devel.models.ClassRoom"/>
        <mapping class="com.devel.models.Registration"/>
        <mapping class="com.devel.models.Rate"/>
        <mapping class="com.devel.models.Secure"/>
    </session-factory>
</hibernate-configuration>